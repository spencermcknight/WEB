<body class="body2BG">
    <div class="roomList">
        <h1>Room Listings</h1>
        <br>
        {{#each sear}}
        <p>{{this}}</p>
        {{/each}}
        {{#if user.admin}}
        <a href="" data-toggle="modal" class="addR" data-target="#addRoom">Add Room</a>
        {{/if}}

        <div class="modal" id="addRoom" role="dialog">
            <form method="POST" action="/task/uploadRoom" class="homeForm" enctype="multipart/form-data">
                <h3 class="formTitle">Sign up today</h3>
                <label>Room Name</label><br>
                <input class="inputBox" type="text" name="roomName" placeholder="Room">
                <label>Location</label><br>
                <select name="location" class="inputBox">
                    <option value="USA">USA</option>
                    <option value="Canada">Canada</option>
                    <option value="Other">Other</option>
                </select>
                <label>Description</label><br>
                <input class="inputBox" type="text" name="description" placeholder="Desc">
                <label>Price</label><br>
                <input class="inputBox" type="text" name="roomPrice" placeholder="$0">
                <input name="foo" type="file">
                <input type="submit" value="Submit Room">
                

            </form>
        </div>



        <div class="roomGrid">
            
        {{#if user.admin}}
            {{#each rooms}}
            <div>
                <div class="box">
                    <img width="100%" height="225px" src={{this.path}}>
                </div>
                <br>
                <div class="innerBox">
                    <div>{{this.name}}</div>
                    <div>{{this.location}}</div>
                    <div class="desc">{{this.description}}</div>
                    <div></div>
                    <div>{{this.price}}</div>
                    <div>
                        <img class="star" src="images/star.webp" width="15" height="15">
                        <img class="star" src="images/star.webp" width="15" height="15">
                        <img class="star" src="images/star.webp" width="15" height="15">
                        <img class="star" src="images/star.webp" width="15" height="15">
                        <img class="star" src="images/star.webp" width="15" height="15">
                    </div>
                    <a href="" data-toggle="modal" class="addR" data-target="#editRoom{{this._id}}">Edit Room</a>
                    <div class="modal" id="editRoom{{this._id}}" role="dialog">
                        <form method="POST" action="/task/editRoom/{{this._id}}" class="homeForm" enctype="multipart/form-data">
                            <h3 class="formTitle">Edit Room</h3>
                            <label>Room Name</label><br>
                            <input class="inputBox" value={{this.name}} type="text" name="roomName" placeholder="Room">
                            <label>Location</label><br>
                            <select value={{this.location}} name="location" class="inputBox">
                                <option value="USA">USA</option>
                                <option value="Canada">Canada</option>
                                <option value="Other">Other</option>
                            </select>
                            <label>Description</label><br>
                            <input class="inputBox" value={{this.description}} type="text" name="description" placeholder="Desc">
                            <label>Price</label><br>
                            <input class="inputBox" value={{this.price}} type="text" name="roomPrice" placeholder="$0">
                            <input name="foo" type="file">
                            <input type="submit" value="Submit Room">
                            
                        </form>
                    </div>
                    <a href="" data-toggle="modal" class="addR" data-target="#bookRoom{{this._id}}">Book Room</a>
                    <div class="modal" id="bookRoom{{this._id}}" role="dialog">
                        <form method="POST" action="/user/bookRoom/{{this._id}}" class="homeForm" enctype="multipart/form-data">
                            <h3 class="formTitle">Book This Room?</h3>
                            <img width="100%" height="200px" src={{this.path}}>
                            <div>{{this.name}}</div>
                            <div>{{this.location}}</div>
                            <div class="desc">{{this.description}}</div>
                            <div></div>
                            <div>{{this.price}}</div>
                            <div>
                                <img class="star" src="images/star.webp" width="15" height="15">
                                <img class="star" src="images/star.webp" width="15" height="15">
                                <img class="star" src="images/star.webp" width="15" height="15">
                                <img class="star" src="images/star.webp" width="15" height="15">
                                <img class="star" src="images/star.webp" width="15" height="15">
                            </div>
                            <input type="submit" value="Yes"> <input type="button" data-dismiss="modal" value="No">
                        </form>
                    </div>
                </div>
            </div>
            {{/each}}
            {{/if}}
            {{#unless user.admin}}
            {{#each rooms}}
            <div>
                <div class="box">
                    <img width="100%" height="225px" src={{this.path}}>
                </div>
                <br>
                <div class="innerBox">
                    <div>{{this.name}}</div>
                    <div>{{this.location}}</div>
                    <div class="desc">{{this.description}}</div>
                    <div></div>
                    <div>{{this.price}}</div>
                    <div>
                        <img class="star" src="images/star.webp" width="15" height="15">
                        <img class="star" src="images/star.webp" width="15" height="15">
                        <img class="star" src="images/star.webp" width="15" height="15">
                        <img class="star" src="images/star.webp" width="15" height="15">
                        <img class="star" src="images/star.webp" width="15" height="15">
                    </div>
                    <a href="" data-toggle="modal" class="addR" data-target="#bookRoom{{this._id}}">Book Room</a>
                    <div class="modal" id="bookRoom{{this._id}}" role="dialog">
                        <form method="POST" action="/user/bookRoom/{{this._id}}" class="homeForm" enctype="multipart/form-data">
                            <h3 class="formTitle">Book This Room?</h3>
                            <img width="80%" height="200px" src={{this.path}}>
                            <div>{{this.name}}</div>
                            <div>{{this.location}}</div>
                            <div class="desc">{{this.description}}</div>
                            <div></div>
                            <div>{{this.price}}</div>
                            <div>
                                <img class="star" src="images/star.webp" width="15" height="15">
                                <img class="star" src="images/star.webp" width="15" height="15">
                                <img class="star" src="images/star.webp" width="15" height="15">
                                <img class="star" src="images/star.webp" width="15" height="15">
                                <img class="star" src="images/star.webp" width="15" height="15">
                            </div>
                            <input type="submit" value="Yes"> <input type="button" data-dismiss="modal" value="No">
                        </form>
                    </div>
                </div>
            </div>
            {{/each}}
            {{/unless}}
        </div>
    </div>
    <br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br>

</body>
